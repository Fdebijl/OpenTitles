{
  "manifest_version": 2,

  "name": "Opentitles",
  "short_name": "Opentitles",
  "description": "Show the changes to titles for several Dutch news outlets.",
  "version": "1.0",
  
  "icons": {
  	"16": "icons/logo16.png",
  	"48": "icons/logo48.png",
  	"128": "icons/logo128.png"
  },

  "web_accessible_resources": [
    "fonts/hist.eot",
    "fonts/hist.svg",
    "fonts/hist.woff",
    "fonts/hist.ttf"
  ],

  "browser_action": {
    "default_icon": "icons/logo48.png"
  },
  
  "content_scripts": [{
    "matches": [
      "https://*.nu.nl/*", 
      "https://*.nos.nl/artikel/*", 
      "https://*.jeugdjournaal.nl/*", 
      "https://*.ad.nl/*", 
      "https://*.bd.nl/*", 
      "https://*.ed.nl/*", 
      "https://*.tubantia.nl/*", 
      "https://*.bndestem.nl/*", 
      "https://*.pzc.nl/*", 
      "https://*.destentor.nl/*", 
      "https://*.gelderlander.nl/*",
      "https://*.telegraaf.nl/*", 
      "https://*.tweakers.net/*", 
      "https://*.nrc.nl/*", 
      "https://*.volkskrant.nl/*", 
      "https://*.rtlnieuws.nl/*",
      "https://*.trouw.nl/*",
      "https://*.parool.nl/*",
      "https://*.limburger.nl/*",
      "https://*.fd.nl/*",
      "https://*.dvhn.nl/*",
      "https://*.hartvannederland.nl/*",
      "https://*.lc.nl/*",
      "https://*.rd.nl/*",
      "https://*.bnr.nl/*",
      "https://*.elsevierweekblad.nl/*"
    ],
    "js": ["ot_script.js"],
    "css": ["ot_style.css"],
    "run_at": "document_idle"
  }]
}
